<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="205dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="8dp"
        android:elevation="16dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="195dp"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/statename_tv"
                android:layout_width="168dp"
                android:layout_height="80dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="45dp"
                android:gravity="center"
                android:text="statename"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/statawise_confirmed_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="190dp"
                android:layout_marginTop="16dp"
                android:text="Confirmed"
                android:textColor="#ff0000"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/statewise_confirmed_tvstats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Textview"
                android:textColor="#ff0000"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/statawise_confirmed_tv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/statawise_confirmed_tv"
                app:layout_constraintTop_toTopOf="@+id/statawise_confirmed_tv"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/statewise_active_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:text="Active"
                android:textColor="#0000ff"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@+id/statawise_confirmed_tv"
                app:layout_constraintTop_toBottomOf="@+id/statawise_confirmed_tv" />

            <TextView
                android:id="@+id/statewise_active_tvstats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="TextView"
                android:textColor="#0000ff"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/statewise_active_tv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/statewise_confirmed_tvstats"
                app:layout_constraintTop_toBottomOf="@+id/statewise_confirmed_tvstats" />

            <TextView
                android:id="@+id/statewise_recovered_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Recovered"
                android:textColor="#3cb371"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@+id/statawise_confirmed_tv"
                app:layout_constraintTop_toBottomOf="@+id/statewise_active_tv" />

            <TextView
                android:id="@+id/statewise_recovered_tvstats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="TextView"
                android:textColor="#3cb371"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/statewise_recovered_tv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/statewise_active_tvstats"
                app:layout_constraintTop_toBottomOf="@+id/statewise_active_tvstats"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/statewise_deceased_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Deceased"
                android:textColor="#000000"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@+id/statewise_recovered_tv"
                app:layout_constraintTop_toBottomOf="@+id/statewise_recovered_tv" />

            <TextView
                android:id="@+id/statewise_deceased_tvstats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="TextView"
                android:textColor="#000000"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/statewise_recovered_tvstats"
                app:layout_constraintTop_toBottomOf="@+id/statewise_recovered_tvstats" />

            <TextView
                android:id="@+id/statewise_lastupdated_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="8dp"
                android:text="Last Updated"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/statewise_deceased_tv" />

            <TextView
                android:id="@+id/statewise_lastupdated_tvstats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="TextView"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/statewise_lastupdated_tv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.181"
                app:layout_constraintStart_toEndOf="@+id/statewise_lastupdated_tv"
                app:layout_constraintTop_toTopOf="@+id/statewise_lastupdated_tv"
                app:layout_constraintVertical_bias="0.0" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <View
        android:id="@+id/divider5"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="6dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView" />
</androidx.constraintlayout.widget.ConstraintLayout>